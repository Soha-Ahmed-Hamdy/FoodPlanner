<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:staggered=".2">
    </Transition>

    <ConstraintSet
        android:id="@+id/start"
        android:visibility="visible">
        <Constraint
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:visibility="visible" />

        <Constraint
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            motion:layout_constraintEnd_toStartOf="@+id/buttonCancel"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toTopOf="@+id/guidelineTop" />


        <Constraint
            android:id="@+id/recyclerViewSearchByNameResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toBottomOf="@id/searchView" />
        <Constraint
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@id/searchView"
            motion:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            motion:layout_constraintStart_toEndOf="@id/searchView"
            motion:layout_constraintTop_toTopOf="@id/searchView"
            motion:layout_editor_absoluteY="91dp" />


    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        android:visibility="gone">
        <Constraint
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="gone"
            motion:transitionEasing="standard" />
        <Constraint
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintEnd_toStartOf="@+id/buttonCancel"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toTopOf="@+id/guidelineTop" />
        <Constraint
            android:id="@+id/recyclerViewSearchByNameResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toBottomOf="@id/searchView" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            motion:layout_constraintStart_toEndOf="@id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/searchView"
            motion:layout_constraintTop_toTopOf="@id/searchView"
            android:id="@+id/buttonCancel"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />
    </ConstraintSet>
</MotionScene>