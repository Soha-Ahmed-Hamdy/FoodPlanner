<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FoodPlanner.TextView_Splash" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FoodPlanner.Card_Auth">
        <item name="cardBackgroundColor">@color/cardViewColor</item>
        <item name="cardCornerRadius">@dimen/auth_card_corner_radius</item>
    </style>

    <style name="Theme.FoodPlanner.LoadingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>


    <style name="Theme.FoodPlanner.TextInputLayout">
        <item name="colorOnSurface">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Theme.FoodPlanner.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_circular_checkbox</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>