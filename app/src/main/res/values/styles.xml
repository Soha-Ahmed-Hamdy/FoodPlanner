<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FoodPlanner.TextView_Splash" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FoodPlanner.Card_Auth" parent="CardView">
        <item name="cardBackgroundColor">@color/card_view_background_auth</item>
        <item name="cardCornerRadius">@dimen/auth_card_corner_radius</item>
    </style>

    <style name="Theme.FoodPlanner.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputLayout" parent="">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout_box_stroke</item>
        <item name="endIconTint">@color/selector_text_input_layout_end_icon_tint</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputEditText"  parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="Theme.FoodPlanner.ImageButton_Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_rounded_ripple</item>
        <item name="android:backgroundTint">@color/card_view_background_auth</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="Theme.FoodPlanner.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ripple_selector_circular_checkbox</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Theme.FoodPlanner.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">150dp</item>
    </style>



</resources>