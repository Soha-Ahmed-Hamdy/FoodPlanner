<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FoodPlanner.TextView_Splash" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FoodPlanner.CardView_Auth">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="android:alpha">.6</item>
        <item name="cardCornerRadius">@dimen/auth_card_corner_radius</item>
    </style>
    <style name="Theme.FoodPlanner.LoadingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>