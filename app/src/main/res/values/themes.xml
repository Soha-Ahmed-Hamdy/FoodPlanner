<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="windowMinWidthMajor">97%</item>-->
<!--        <item name="android:windowMinWidthMajor">97%</item>-->
    </style>
    <style name="card_view" parent="CardView">

        <item name="cardBackgroundColor">@color/cardViewColor</item>
        <item name="cardCornerRadius">40dp</item>
    </style>


    <style name="mail_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/off_white</item>
        <item name="android:backgroundTint">@color/off_white</item>
        <item name="android:drawableStart">@drawable/mail_icon</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/mail</item>
    </style>

    <style name="pass_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/off_white</item>
        <item name="android:backgroundTint">@color/off_white</item>
        <item name="android:drawableStart">@drawable/ic_baseline_lock_24</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="logo_image">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:src">@drawable/img</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">20dp</item>

    </style>

    <style name="Button_Auth" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">40dp</item>
        <item name="android:text">@string/sign_up</item>
        <item name="android:textAllCaps" >false</item>
        <item name="android:layout_gravity" >center</item>
        <item name="android:textSize" >20sp</item>


    </style>
</resources>